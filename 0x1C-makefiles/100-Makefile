# Define variables
NAME := school
SRC := $(wildcard *.c)
DEP := $(wildcard *.h)
OBJ := $(SRC:.c=.o)
CC := gcc
CFLAGS := -Wall -Werror -Wextra -pedantic

.PHONY: all clean fclean oclean re

all: $(NAME)

$(NAME): $(DEP) $(OBJ)
	@$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	@find . \( -name "*~" -o -name "\#*\#" \) -delete
	@find . -name "$(NAME)" -delete

oclean:
	@find . -name "*.o" -delete

fclean: clean oclean

re: fclean all
