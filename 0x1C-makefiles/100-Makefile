CC := gcc -Wall -Werror -Wextra -pedantic
RM := rm -f
SRC := $(wildcard *.c)
OBJ := $(SRC:.c=.o)
NAME := school
HEADER := m.h

.PHONY: all clean fclean oclean re

all: $(NAME)

$(NAME): $(SRC)
	@if [ ! -f $(HEADER) ]; then \
		echo "Header file $(HEADER) missing, compilation aborted."; \
		false; \
	else \
		$(CC) -c $^; \
		$(CC) -o $(NAME) $(OBJ); \
	fi

clean:
	@$(RM) *~ \#*\# $(NAME)

oclean:
	@$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
