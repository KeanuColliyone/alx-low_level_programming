# Variable Definitions
CC := gcc
SRC := $(wildcard *.c)
OBJ := $(SRC:.c=.o)
NAME := school
CFLAGS := -Wall -Werror -Wextra -pedantic
RM := rm -f

COMPILE.c = $(CC) $(CFLAGS) -c

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $^ -o $@

$(OBJ): %.o: %.c
	@$(COMPILE.c) $< -o $@ 

clean:
	@$(RM) *~ $(NAME) && touch clean

oclean:
	@$(RM) $(OBJ) && touch oclean

fclean: clean
	@$(RM) $(OBJ) && touch fclean

re: fclean all

# Phony Targets
.PHONY: all clean fclean oclean re
