CC := gcc
RM := rm -f
CFLAGS := -Wall -Werror -Wextra -pedantic
SRC := $(wildcard *.c)
OBJ := $(SRC:.c=.o)
NAME := school

.PHONY: all clean fclean oclean re

all: $(NAME)

$(NAME): $(OBJ)
	@$(CC) $(CFLAGS) $^ -o $@

%.o: %.c
	@$(CC) $(CFLAGS) -c $< -o $@

re: fclean all

clean:
	@$(RM) *~ \#*\# $(NAME)

oclean:
	@$(RM) $(OBJ)

fclean: clean oclean

.SILENT: $(NAME) $(OBJ)
