CC := gcc
RM := rm -f
NAME := school
SRC := $(wildcard *.c)
OBJ := $(SRC:.c=.o)

all: $(NAME)

$(NAME): $(OBJ)
	@$(CC) $(OBJ) -o $(NAME)

%.o: %.c
	@$(CC) -c $< -o $@

clean:
	@$(RM) *~ $(NAME)

oclean:
	@$(RM) $(OBJ)

fclean: clean
	@$(RM) $(OBJ)

re: fclean all

.PHONY: all clean oclean fclean re

